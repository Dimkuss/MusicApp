<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip">


    <ImageView
        android:id="@+id/img_author"
        android:layout_width="200dip"
        android:layout_height="200dip"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp" />


    <TextView
        android:id="@+id/name_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_author"
        android:layout_toEndOf="@+id/img_author"
        android:textColor="#040404"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="sans"
        tools:text="EMINEM" />


    <TextView
        android:id="@+id/listeners"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_author"
        android:layout_alignStart="@+id/name_author"
        android:textColor="#040404"
        android:textSize="15sp"
        tools:ignore="SmallSp"
        tools:text="Author 123" />
    <TextView
        android:id="@+id/play_count"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listeners"
        android:layout_alignStart="@+id/listeners"
        android:textColor="#040404"
        android:textSize="15sp"
        tools:ignore="SmallSp"
        tools:text="Author 123" />



</RelativeLayout>